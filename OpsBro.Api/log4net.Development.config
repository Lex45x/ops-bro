<log4net>
  <appender name="Index" type="Ebrains.Logging.Log4Net.Appenders.ElasticSearchAppender,Ebrains.Logging.Log4Net">
    <host value="http://localhost:9200/" />
    <login value="123" />
    <password value="qwe" />
    <index value="logs.power-binder.dotnet" />
  </appender>
  <appender name="Root" type="log4net.Appender.RollingFileAppender">
    <file value="C:/Logs/PowerBinder/Root/" />
    <encoding value="utf-8" />
    <maxSizeRollBackups value="20" />
    <maximumFileSize value="50MB" />
    <staticLogFileName value="false" />
    <datePattern value="dd.MM.yyyy'.log'" />
    <countDirection value="1" />
    <rollingStyle value="Composite" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%newline%utcdate{dd/MMM/yyyy HH:mm:ss,fff} :: [%logger]:[%level] :: %message%newline" />
    </layout>
  </appender>
  <renderer renderingClass="Ebrains.Logging.Log4Net.Renderers.JObjectRenderer,Ebrains.Logging.Log4Net"
            renderedClass="Newtonsoft.Json.Linq.JObject,Newtonsoft.Json" />
  <root>
    <threshold value="Trace" />
    <appender-ref ref="Root" />
  </root>
</log4net>