{
  "eventDispatchers": [
    {
      "eventName": "take_in_progress",
      "schema": {
        "$id": "g2j/take_in_progress",
        "type": "object",
        "properties": {
          "issue": {
            "$id": "/properties/issue",
            "type": "string",
            "title": "TheIssueSchema",
            "default": "",
            "examples": [ "SH-123" ]
          },
          "author": {
            "$id": "/properties/author",
            "type": "string",
            "title": "TheAuthorSchema",
            "default": "",
            "examples": [ "alex.redka" ]
          },
          "ref": {
            "$id": "/properties/ref",
            "type": "string",
            "title": "TheRefSchema",
            "default": "",
            "examples": [ "refs/heads/develo" ]
          }
        },
        "required": [ "issue", "author", "ref" ]
      },
      "subscribers": [
        {
          "urlTemplate": "https://{HOST}/rest/api/2/issue/{ISSUE}/transitions",
          "method": "POST",
          "bodyTemplate": {
            "update": {
              "comment": [
                {
                  "add": {
                    "body": "Task taken in progress"
                  }
                }
              ]
            },
            "fields": {
              "assignee": {
                "name": "{AUTHOR}"
              },
              "customfield_10035": "{REF}"
            },
            "transition": {
              "id": "21"
            }
          },
          "bodyTemplateRules": [
            {
              "path": "fields.assignee.name",
              "property": "event.author"
            },
            {
              "path": "fields.customfield_10035",
              "property": "event.ref"
            }
          ],
          "headerTemplateRules": [
            {
              "headerName": "Authorization",
              "property": "config.jira.auth"
            }
          ],
          "urlTemplateRules": [
            {
              "substring": "{ISSUE}",
              "property": "event.issue"
            },
            {
              "substring": "{HOST}",
              "property": "config.jira.host"
            }
          ]
        }
      ]
    },
    {
      "eventName": "complete_task",
      "schema": {
        "$id": "http://example.com/example.json",
        "type": "object",
        "properties": {
          "issue": {
            "$id": "/properties/issue",
            "type": "string",
            "title": "The Issue Schema ",
            "default": "",
            "examples": [ "" ]
          },
          "url": {
            "$id": "/properties/url",
            "type": "string",
            "title": "The Url Schema ",
            "default": "",
            "examples": [ "" ]
          }
        },
        "required": [ "issue", "url" ]
      },
      "subscribers": [
        {
          "urlTemplate": "https://*.atlassian.net/rest/api/2/issue/{ISSUE}/transitions",
          "method": "POST",
          "bodyTemplate": {
            "update": {
              "comment": [
                {
                  "add": {
                    "body": "Pull request created"
                  }
                }
              ]
            },
            "fields": {
              "customfield_10031": "{URL}"
            },
            "transition": {
              "id": "31"
            }
          },
          "bodyTemplateRules": [
            {
              "path": "fields.customfield_10031",
              "property": "event.url"
            }
          ],
          "headerTemplateRules": [
            {
              "headerName": "Authorization",
              "property": "config.jira.auth"
            }
          ],
          "urlTemplateRules": [
            {
              "substring": "{ISSUE}",
              "property": "event.issue"
            }
          ]
        }
      ]
    },
    {
      "eventName": "task_work_in_progress",
      "schema": {
        "$id": "g2j/task_work_in_progress",
        "type": "object",
        "properties": {
          "issue": {
            "$id": "/properties/issue",
            "type": "string",
            "title": "The Issue Schema ",
            "default": "",
            "examples": [ "" ]
          }
        },
        "required": [ "issue" ]
      },
      "subscribers": [
        {
          "urlTemplate": "https://*.atlassian.net/rest/api/2/issue/{ISSUE}/transitions",
          "method": "POST",
          "bodyTemplate": {
            "update": {
              "comment": [
                {
                  "add": {
                    "body": "Pull request become WIP!"
                  }
                }
              ]
            },
            "transition": {
              "id": "111"
            }
          },
          "bodyTemplateRules": [],
          "headerTemplateRules": [
            {
              "headerName": "Authorization",
              "property": "config.jira.auth"
            }
          ],
          "urlTemplateRules": [
            {
              "substring": "{ISSUE}",
              "property": "event.issue"
            }
          ]
        }
      ]
    },
    {
      "eventName": "merge_task",
      "schema": {
        "$id": "g2j/merge_task",
        "type": "object",
        "properties": {
          "issue": {
            "$id": "/properties/issue",
            "type": "string",
            "title": "The Issue Schema ",
            "default": "",
            "examples": [ "" ]
          }
        },
        "required": [ "issue" ]
      },
      "subscribers": [
        {
          "urlTemplate": "https://*.atlassian.net/rest/api/2/issue/{ISSUE}/transitions",
          "method": "POST",
          "bodyTemplate": {
            "update": {
              "comment": [
                {
                  "add": {
                    "body": "Pull request merged!"
                  }
                }
              ]
            },
            "transition": {
              "id": "51"
            }
          },
          "bodyTemplateRules": [],
          "headerTemplateRules": [
            {
              "headerName": "Authorization",
              "property": "config.jira.auth"
            }
          ],
          "urlTemplateRules": [
            {
              "substring": "{ISSUE}",
              "property": "event.issue"
            }
          ]
        }
      ]
    }
  ],
  "listeners": [
    {
      "name": "gitlab",
      "extractors": [
        {
          "comment": "Commits are pushed into branch",
          "eventName": "take_in_progress",
          "extractionRules": [
            {
              "type": "FirstRegexMatch",
              "pattern": "[A-Z]{1,10}-\\d{1,10}",
              "path": "body.ref",
              "property": "issue"
            },
            {
              "type": "Copy",
              "path": "body.user_username",
              "property": "author"
            },
            {
              "type": "Copy",
              "path": "body.ref",
              "property": "ref"
            }
          ],
          "validationRules": [
            {
              "path": "headers.X-Gitlab-Token[0]",
              "configPath": "gitlab.token",
              "operator": "Equals"
            },
            {
              "path": "body.object_kind",
              "value": "push",
              "operator": "Equals"
            },
            {
              "path": "body.checkout_sha",
              "value": null,
              "operator": "NotEquals"
            }
          ]
        },
        {
          "comment": "Merge request created",
          "eventName": "complete_task",
          "extractionRules": [
            {
              "type": "FirstRegexMatch",
              "pattern": "[A-Z]{1,10}-\\d{1,10}",
              "path": "body.object_attributes.source_branch",
              "property": "issue"
            },
            {
              "type": "Copy",
              "path": "body.object_attributes.url",
              "property": "url"
            }
          ],
          "validationRules": [
            {
              "path": "headers.X-Gitlab-Token[0]",
              "configPath": "gitlab.token",
              "operator": "Equals"
            },
            {
              "path": "body.object_kind",
              "value": "merge_request",
              "operator": "Equals"
            },
            {
              "path": "body.object_attributes.action",
              "value": "open",
              "operator": "Equals"
            },
            {
              "path": "body.object_attributes.work_in_progress",
              "value": false,
              "operator": "Equals"
            }
          ]
        },
        {
          "comment": "Merge request WIP status resolved",
          "eventName": "complete_task",
          "extractionRules": [
            {
              "type": "FirstRegexMatch",
              "pattern": "[A-Z]{1,10}-\\d{1,10}",
              "path": "body.object_attributes.source_branch",
              "property": "issue"
            },
            {
              "type": "Copy",
              "path": "body.object_attributes.url",
              "property": "url"
            }
          ],
          "validationRules": [
            {
              "path": "headers.X-Gitlab-Token[0]",
              "configPath": "gitlab.token",
              "operator": "Equals"
            },
            {
              "path": "body.object_kind",
              "value": "merge_request",
              "operator": "Equals"
            },
            {
              "path": "body.object_attributes.action",
              "value": "update",
              "operator": "Equals"
            },
            {
              "path": "body.object_attributes.work_in_progress",
              "value": false,
              "operator": "Equals"
            }
          ]
        },
        {
          "comment": "WIP status assigned to a Merge Request",
          "eventName": "task_work_in_progress",
          "extractionRules": [
            {
              "type": "FirstRegexMatch",
              "pattern": "[A-Z]{1,10}-\\d{1,10}",
              "path": "body.object_attributes.source_branch",
              "property": "issue"
            },
            {
              "type": "Copy",
              "path": "body.object_attributes.url",
              "property": "url"
            }
          ],
          "validationRules": [
            {
              "path": "headers.X-Gitlab-Token[0]",
              "configPath": "gitlab.token",
              "operator": "Equals"
            },
            {
              "path": "body.object_kind",
              "value": "merge_request",
              "operator": "Equals"
            },
            {
              "path": "body.object_attributes.action",
              "value": "update",
              "operator": "Equals"
            },
            {
              "path": "body.object_attributes.work_in_progress",
              "value": true,
              "operator": "Equals"
            }
          ]
        },
        {
          "comment": "Merge request merged",
          "eventName": "merge_task",
          "extractionRules": [
            {
              "type": "FirstRegexMatch",
              "pattern": "[A-Z]{1,10}-\\d{1,10}",
              "path": "body.object_attributes.source_branch",
              "property": "issue"
            }
          ],
          "validationRules": [
            {
              "path": "headers.X-Gitlab-Token[0]",
              "configPath": "gitlab.token",
              "operator": "Equals"
            },
            {
              "path": "body.object_kind",
              "value": "merge_request",
              "operator": "Equals"
            },
            {
              "path": "body.object_attributes.action",
              "value": "merge",
              "operator": "Equals"
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "$id": "config",
    "jira": {
      "auth": "jira-token",
      "host": "example.atlassian.com"
    },
    "gitlab": {
      "token": "gitlab-token"
    }
  }
}